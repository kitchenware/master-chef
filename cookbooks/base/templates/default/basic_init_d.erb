#! /bin/bash

### BEGIN INIT INFO
# Provides: <%= @name %>
# Required-Start: <%= @required_start %>
# Required-Stop:
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: <%= @name %>
### END INIT INFO

set -e

NAME="<%= @name %>"
DESC="<%= @name %>"
PID_FILE="<%= @pid_file %>"
START_STOP_DAEMON="/sbin/start-stop-daemon"
DAEMON="<%= @daemon %>"
OPTIONS="<%= @options %>"

<% @file_check.each do |f| %>
test -f <%= f %> || exit 0
<% end %>

<% @executable_check.each do |f| %>
test -x <%= f %> || exit 0
<% end %>

<% @directory_check.each do |f| %>
test -d <%= f %> || exit 0
<% end %>

<% @vars_to_unset.each do |v| %>
unset <%= v %>
<% end %>

<%= @code %>

umask 022

. /lib/lsb/init-functions

status_<%= @name %>() {
  PID_FILE="$(ls `dirname $PID_FILE`/*.pid | grep $NAME | grep -v $PID_FILE || echo $PID_FILE)"
  status_of_proc -p "$PID_FILE" "<%= @name %>" "$NAME"
}

stop_<%= @name %>() {
  if [ ! "$PID_FILE" = "" ]; then
    if [ -f $PID_FILE ]; then
      $START_STOP_DAEMON --oknodo --retry TERM/<%= @check_stop[:term_time].call() %>/KILL/<%= @check_stop[:kill_time].call() %> --pidfile $PID_FILE --signal TERM --stop
    fi
  fi
}

run_<%= @name %>() {
  echo "Running $NAME :"
  <%= @run_code %>
  <%= @su_command %> $DAEMON $OPTIONS <%= @end_of_command %>"
}

start_<%= @name %>() {
  $START_STOP_DAEMON <%= @start_options %> --oknodo --start --pidfile $PID_FILE --startas /bin/sh -- -c "exec $DAEMON $OPTIONS <%= @end_of_command %>" 2>&1 > /dev/null
<% if @check_start %>
  sleep <%= @check_start[:initial_delay] %>
  i=0
  while [ true ]; do
    sleep <%= @check_start[:loop_delay] %>
    i=$(expr $i + 1)
    set +e
    status_<%= @name %> 2>&1 > /dev/null
    res=$?
    set -e
    if [ $res = 0 ]; then
      break;
    fi
    if [ $i -gt <%= (@check_start[:max_delay] / @check_start[:loop_delay]).to_i %> ]; then
      echo "Unable to find running process after <%= @check_start[:max_delay] %> seconds."
      exit 1
    fi
  done
<% end %>
  <%= @post_start %>
}

case "$1" in
  run)
    run_<%= @name %>
    ;;
  start)
    echo -n "Starting $DESC: "
    start_<%= @name %>
    echo "$NAME."
    ;;
  stop)
    echo -n "Stopping $DESC: "
    stop_<%= @name %>
    echo "$NAME."
    ;;
  restart)
    echo -n "Restarting $DESC: "
    stop_<%= @name %> || true
    sleep 1
    start_<%= @name %>
    echo "$NAME."
    ;;
  status)
    status_<%= @name %>
    ;;
  *)
    echo "Usage: /etc/init.d/<%= @name %> {start|stop|restart|status|run}"
    exit 1
esac

exit 0
